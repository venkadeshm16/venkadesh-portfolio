<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Experience - <%= data.personal.name %></title>
    <link rel="stylesheet" href="/css/style.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body>
    <nav class="navbar">
        <div class="nav-container">
            <div class="nav-logo">
                <a href="/"><%= data.personal.name %></a>
            </div>
            <div class="nav-menu">
                <a href="/" class="nav-link">Home</a>
                <a href="/experience" class="nav-link active">Experience</a>
                <a href="/projects" class="nav-link">Projects</a>
                <a href="/contact" class="nav-link">Contact</a>
            </div>
        </div>
    </nav>

    <main>
        <section class="page-header">
            <div class="container">
                <h1>Professional Experience</h1>
                <p>Building real-time, reliable, and automated software solutions with Kafka, Python, and modern cloud tools</p>
            </div>
        </section>

        <section class="experience-section">
            <div class="container">
                <div class="timeline">
                    <% data.experience.forEach((exp, index) => { %>
                        <div class="timeline-item">
                            <div class="timeline-marker"></div>
                            <div class="timeline-content">
                                <div class="experience-card">
                                    <div class="experience-header">
                                        <h3><%= exp.position %></h3>
                                        <h4><%= exp.company %></h4>
                                        <span class="duration"><%= exp.duration %></span>
                                    </div>
                                    <p class="experience-description"><%= exp.description %></p>
                                    <div class="experience-tech">
                                        <h5>Technologies Used:</h5>
                                        <div class="tech-list">
                                            <% exp.technologies.forEach(tech => { %>
                                                <span class="tech-tag"><%= tech %></span>
                                            <% }); %>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                </div>
            </div>
        </section>

        <!-- Skills Summary -->
        <section class="skills-summary">
            <div class="container">
                <h2>Technical Skills</h2>
                <div class="skills-grid">
                    <div class="skill-category">
                        <h3><i class="fas fa-server"></i> Backend Development</h3>
                        <div class="skill-list">
                            <% data.technologies.backend.forEach(skill => { %>
                                <span class="skill-item"><%= skill %></span>
                            <% }); %>
                        </div>
                    </div>
                    <div class="skill-category">
                        <h3><i class="fas fa-database"></i> Databases</h3>
                        <div class="skill-list">
                            <% data.technologies.databases.forEach(skill => { %>
                                <span class="skill-item"><%= skill %></span>
                            <% }); %>
                        </div>
                    </div>
                    <div class="skill-category">
                        <h3><i class="fas fa-tools"></i> Tools & Technologies</h3>
                        <div class="skill-list">
                            <% data.technologies.tools.forEach(skill => { %>
                                <span class="skill-item"><%= skill %></span>
                            <% }); %>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>

    <footer class="footer">
        <div class="footer-content">
            <p>&copy; 2025 <%= data.personal.name %>. All rights reserved.</p>
            <div class="social-links">
                <a href="<%= data.personal.github %>" target="_blank"><i class="fab fa-github"></i></a>
                <a href="<%= data.personal.linkedin %>" target="_blank"><i class="fab fa-linkedin"></i></a>
            </div>
        </div>
    </footer>

    <script src="/js/script.js"></script>
</body>
</html>