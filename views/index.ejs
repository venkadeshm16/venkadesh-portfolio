<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home - <%= data.personal.name %></title>
    <link rel="stylesheet" href="/css/style.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body>
    <nav class="navbar">
        <div class="nav-container">
            <div class="nav-logo">
                <a href="/"><%= data.personal.name %></a>
            </div>
            <div class="nav-menu">
                <a href="/" class="nav-link active">Home</a>
                <a href="/experience" class="nav-link">Experience</a>
                <a href="/projects" class="nav-link">Projects</a>
                <a href="/contact" class="nav-link">Contact</a>
            </div>
        </div>
    </nav>

    <main>
        <!-- Hero Section -->
        <section class="hero">
            <div class="hero-content">
                <h1>Hi, I'm <span class="highlight"><%= data.personal.name %></span></h1>
                <h2><%= data.personal.title %></h2>
                <p><%= data.personal.bio %></p>
                <div class="hero-buttons">
                    <a href="/projects" class="btn btn-primary">View Projects</a>
                    <a href="/contact" class="btn btn-secondary">Contact Me</a>
                </div>
            </div>
        </section>

        <!-- Technologies Section -->
        <section class="technologies">
            <div class="container">
                <h2>Technologies I Work With</h2>
                <div class="tech-grid">
                    <div class="tech-category">
                        <h3>Backend</h3>
                        <div class="tech-list">
                            <% data.technologies.backend.forEach(tech => { %>
                                <span class="tech-tag"><%= tech %></span>
                            <% }); %>
                        </div>
                    </div>
                    <div class="tech-category">
                        <h3>Databases</h3>
                        <div class="tech-list">
                            <% data.technologies.databases.forEach(tech => { %>
                                <span class="tech-tag"><%= tech %></span>
                            <% }); %>
                        </div>
                    </div>
                    <div class="tech-category">
                        <h3>Tools & Others</h3>
                        <div class="tech-list">
                            <% data.technologies.tools.forEach(tech => { %>
                                <span class="tech-tag"><%= tech %></span>
                            <% }); %>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Recent Projects Preview -->
        <section class="projects-preview">
            <div class="container">
                <h2>Featured Projects</h2>
                <div class="projects-grid">
                    <% data.projects.slice(0, 3).forEach(project => { %>
                        <div class="project-card">
                            <h3><%= project.name %></h3>
                            <p><%= project.description %></p>
                            <div class="project-tech">
                                <% project.technologies.forEach(tech => { %>
                                    <span class="tech-tag small"><%= tech %></span>
                                <% }); %>
                            </div>
                            <% if (project.github || project.demo) { %>
                            <div class="project-links">
                                <% if (project.github) { %>
                                <a href="<%= project.github %>" target="_blank" class="btn btn-small">
                                    <i class="fab fa-github"></i> Code
                                </a>
                                <% } %>
                                <% if (project.demo) { %>
                                <a href="<%= project.demo %>" target="_blank" class="btn btn-small btn-primary">
                                    <i class="fas fa-external-link-alt"></i> Demo
                                </a>
                                <% } %>
                            </div>
                            <% } %>
                        </div>
                    <% }); %>
                </div>
                <div class="text-center">
                    <a href="/projects" class="btn btn-primary">View All Projects</a>
                </div>
            </div>
        </section>
    </main>

    <footer class="footer">
        <div class="footer-content">
            <p>&copy; 2025 <%= data.personal.name %>. All rights reserved.</p>
            <div class="social-links">
                <a href="<%= data.personal.github %>" target="_blank"><i class="fab fa-github"></i></a>
                <a href="<%= data.personal.linkedin %>" target="_blank"><i class="fab fa-linkedin"></i></a>
            </div>
        </div>
    </footer>

    <script src="/js/script.js"></script>
</body>
</html>